/* 常用颜色 */
.text-primary { color: var(--primary-color); }
.text-secondary { color: var(--secondary-color); }
.text-success { color: var(--success-color); }
.text-warning { color: var(--warning-color); }
.text-danger { color: var(--danger-color); }
.text-gray { color: var(--text-tertiary); }
.text-white { color: #ffffff; }

.bg-primary { background-color: var(--primary-color); }
.bg-light { background-color: var(--primary-light); }
.bg-white { background-color: #ffffff; }
.bg-gray { background-color: var(--bg-color); }

/* 文本对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 字体粗细 */
.font-normal { font-weight: normal; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: bold; }

/* 布局辅助 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }
.gap-1 { gap: 10rpx; }
.gap-2 { gap: 20rpx; }

/* 边框和圆角 */
.rounded-full { border-radius: 50%; }
.rounded-lg { border-radius: 12rpx; }
.rounded-xl { border-radius: 20rpx; }
.border-b { border-bottom: 1rpx solid var(--border-color); }
.border-t { border-top: 1rpx solid var(--border-color); }

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #EEEEEE;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  font-size: 20rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.tag-success {
  background-color: rgba(76, 175, 80, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(255, 193, 7, 0.1);
  color: var(--warning-color);
}