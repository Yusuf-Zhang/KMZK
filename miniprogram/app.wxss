/**app.wxss**/
page {
  --primary-gradient-start: #4776E6;
  --primary-gradient-end: #8E54E9;
  --primary-color: #3c89ff;
  --primary-light: #EBF2FF;
  --secondary-color: #8E54E9;
  --success-color: #4CAF50;
  --warning-color: #FFC107;
  --danger-color: #F44336;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --bg-color: #f6f6f6;
  --card-bg: #ffffff;
  --border-color: #EEEEEE;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--bg-color);
  box-sizing: border-box;
  padding-top: 0; /* 修改为0，移除顶部间隙 */
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 100rpx; /* 为底部导航栏预留空间 */
}

/* 顶部渐变背景 */
.header-gradient {
  background-image: linear-gradient(to right, var(--primary-gradient-start), var(--primary-gradient-end));
  color: #ffffff;
  padding: 30rpx;
  border-radius: 0 0 40rpx 40rpx;
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 按钮样式 */
.btn-primary {
  background-image: linear-gradient(to right, var(--primary-gradient-start), var(--primary-gradient-end));
  color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(71, 118, 230, 0.2);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-weight: 500;
  text-align: center;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  position: relative;
  flex: 1;
}

.search-input {
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 20rpx 60rpx 20rpx 20rpx;
  color: #ffffff;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.filter-panel {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  background-color: var(--bg-color);
  color: var(--text-secondary);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.filter-option.active {
  background-color: var(--primary-color);
  color: #ffffff;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1rpx solid var(--border-color);
  padding-top: 10rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.tab-icon {
  font-size: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-bottom: 6rpx;
}

.tab-item.active {
  color: var(--primary-color);
}

