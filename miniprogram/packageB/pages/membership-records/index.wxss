/* membership-records/index.wxss */
page {
  background-color: #f5f5f5;
}

.records-container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部标题 */
.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 购买记录列表 */
.records-list {
  padding: 0 30rpx;
}

.record-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.record-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 10rpx;
  height: 100%;
  background-color: #1aad19;
}

.record-item.expired::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 10rpx;
  height: 100%;
  background-color: #999;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.record-plan {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.record-status {
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.active .record-status {
  background-color: #e8f6e8;
  color: #1aad19;
}

.expired .record-status {
  background-color: #f5f5f5;
  color: #999;
}

.record-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.info-label {
  width: 160rpx;
  color: #666;
}

.info-value {
  flex: 1;
  color: #333;
}

.info-value.order-number {
  font-size: 26rpx;
  color: #666;
}

.record-footer {
  text-align: right;
  font-size: 26rpx;
  color: #3c89ff;
}

/* 空记录提示 */
.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 加载提示 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #3c89ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 加载更多和没有更多提示 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
}

.more-text {
  font-size: 28rpx;
  color: #999;
} 