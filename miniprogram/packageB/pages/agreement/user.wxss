/* agreement/user.wxss */
page {
  background-color: #fff;
}

.agreement-container {
  padding: 30rpx;
}

/* 标题样式 */
.agreement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 40rpx 0;
}

.agreement-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 20rpx;
}

/* 段落样式 */
.agreement-paragraph {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 2em;
}

/* 列表样式 */
.agreement-list-item {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin: 10rpx 0 10rpx 20rpx;
}

.agreement-list-subitem {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin: 6rpx 0 6rpx 60rpx;
} 