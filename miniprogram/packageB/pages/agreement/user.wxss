/* agreement/user.wxss */
page {
  background-color: #fff;
}

.agreement-container {
  padding: 30rpx;
}

/* 标题样式 */
.agreement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 40rpx 0;
}

.agreement-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 20rpx;
}

/* 段落样式 */
.agreement-paragraph {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 2em;
}

/* 列表样式 */
.agreement-list-item {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin: 10rpx 0 10rpx 20rpx;
}

.agreement-list-subitem {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin: 6rpx 0 6rpx 60rpx;
}

/* 新增头部样式 */
.agreement-header {
  text-align: center;
  padding: 40rpx 0;
}

.agreement-header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.agreement-header-desc {
  font-size: 28rpx;
  color: #999;
}

/* 内容容器 */
.agreement-content {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 底部样式 */
.agreement-footer {
  text-align: center;
  padding: 40rpx 0;
}

.agreement-footer-text {
  font-size: 28rpx;
  color: #999;
} 