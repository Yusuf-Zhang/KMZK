/* agreement/privacy.wxss */
page {
  background-color: #fff;
}

.privacy-container {
  padding: 30rpx;
}

/* 标题样式 */
.privacy-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 40rpx 0;
}

.privacy-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 20rpx;
}

/* 段落样式 */
.privacy-paragraph {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 2em;
}

/* 列表样式 */
.privacy-list-item {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  margin: 10rpx 0 10rpx 20rpx;
} 