/* pages/policy-special/index.wxss */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 100rpx; /* 底部留白 */
}

/* 通用样式类 */
.flex { display: flex; }
.items-center { align-items: center; }
.p-3 { padding: 30rpx; }
.pt-20 { padding-top: 200rpx; }
.pb-6 { padding-bottom: 50rpx; }
.mt-3 { margin-top: 30rpx; }
.ml-3 { margin-left: 30rpx; }
.block { display: block; }
.rounded-b-3xl { border-radius: 0 0 40rpx 40rpx; }
.text-white { color: #fff; }
.opacity-80 { opacity: 0.8; }
.font-sm { font-size: 28rpx; }
.text-lg { font-size: 36rpx; }
.text-xl { font-size: 40rpx; }
.font-bold { font-weight: bold; }

/* 顶部渐变背景 */
.header-gradient {
  background-image: linear-gradient(to right, #4776E6, #8E54E9);
  color: #ffffff;
}

/* 顶部导航栏 */
.header-bg {
  background: linear-gradient(135deg, #4776E6 0%, #8E54E9 100%);
  color: #fff;
  padding: 0 30rpx 60rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.nav-bar {
  height: 44px;
  width: 100%;
  position: relative;
}

.nav-content {
  height: 100%;
  display: flex;
  align-items: center;
}

.back-btn {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 100rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.back-icon {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #fff;
  border-left: 3rpx solid #fff;
  transform: rotate(-45deg);
  margin-right: 10rpx;
}

.back-text {
  color: #fff;
  font-size: 24rpx;
}

.back-btn image {
  display: none;
}

.home-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
}

.home-btn image {
  width: 36rpx;
  height: 36rpx;
}

.page-title {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 20rpx;
}

/* 内容区域 */
.content-area {
  margin-top: -30rpx;
  padding: 0 30rpx;
  flex: 1;
  position: relative;
  z-index: 10;
}

/* 标签页切换 */
.tabs-container {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  margin-top: 15rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 30rpx;
  color: #666;
  background-color: #f5f5f5;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  background-color: #4776E6;
  font-weight: bold;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-bottom: 16rpx;
}

.card-title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: rgba(142, 84, 233, 0.3);
}

.card-title image {
  display: none;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 学校列表样式 */
.schools-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.school-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.school-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
}

.school-badge {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
}

.school-badge.primary {
  background-color: rgba(71, 118, 230, 0.1);
  color: #4776E6;
}

.school-badge.secondary {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.school-badge.ashima {
  background-color: rgba(156, 39, 176, 0.1);
  color: #9C27B0;
}

.score-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
}

.score-year {
  color: #666;
}

.score-value {
  color: #4776E6;
  font-weight: 500;
}

.ashima-color {
  color: #9C27B0;
}

/* 政策详情样式 */
.details-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  color: #666;
  line-height: 1.5;
}

/* 审核内容样式 */
.audit-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  margin-top: 50rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}

.empty-content image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.school-category-card {
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.category-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: #1aad19;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

