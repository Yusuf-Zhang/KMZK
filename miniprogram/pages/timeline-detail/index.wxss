/* 整体容器 */
.container {
  padding-bottom: 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面内容区域 - 添加顶部内边距避免被导航栏遮挡 */
.page-content {
  padding-top: 190rpx; /* 预留足够空间给导航栏 */
}

/* 月份筛选区域 */
.filter-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.month-filter {
  white-space: nowrap;
  margin-bottom: 10rpx;
  padding: 10rpx 0;
}

.month-item {
  display: inline-block;
  padding: 10rpx 25rpx;
  margin-right: 15rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.month-item.selected {
  background-image: linear-gradient(to right, #4776E6, #8E54E9);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(71, 118, 230, 0.2);
}

/* 时间线容器 */
.timeline-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.loading, .empty-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 时间线列表 */
.timeline-list {
  position: relative;
}

.timeline-list:before {
  content: '';
  position: absolute;
  top: 0;
  left: 10rpx;
  height: 100%;
  width: 2rpx;
  background-color: #eaeaea;
}

.timeline-item {
  position: relative;
  padding: 15rpx 0 15rpx 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.timeline-item:before {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 24rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-image: linear-gradient(to right, #4776E6, #8E54E9);
  z-index: 1;
}

.timeline-item.past:before {
  background-image: none;
  background-color: #ccc;
}

.timeline-date {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.countdown {
  margin-left: 10rpx;
  color: #4776E6;
  font-weight: 500;
  background-color: rgba(71, 118, 230, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.timeline-item.past .countdown {
  color: #999;
  background-color: #f5f5f5;
}

.timeline-content {
  padding: 5rpx 0;
}

.timeline-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  color: #333;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 