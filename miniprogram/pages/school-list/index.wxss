}

.search-modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.search-modal.show .search-modal-content {
  transform: scale(1);
}

.search-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.search-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.search-modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

