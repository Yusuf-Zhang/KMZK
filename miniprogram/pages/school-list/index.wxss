/* school-list/index.wxss */

page {
  background-color: #f5f5f5;
  --primary-gradient-start: #4776E6;
  --primary-gradient-end: #8E54E9;
  --primary-color: #3c89ff;
  --primary-light: #EBF2FF;
  --secondary-color: #8E54E9;
  --success-color: #4CAF50;
  --warning-color: #FFC107;
  --danger-color: #F44336;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --bg-color: #f5f5f5;
  height: 100%;
}

.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}

/* 欢迎区域渐变背景 */
.header-gradient {
  background-image: linear-gradient(to right, var(--primary-gradient-start), var(--primary-gradient-end));
  color: #ffffff;
  padding: 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 20rpx;
}

.welcome-text {
  margin-bottom: 20rpx;
}

.text-white {
  color: #ffffff;
}

.text-lg {
  font-size: 36rpx;
}

.font-bold {
  font-weight: bold;
}

.font-sm {
  font-size: 24rpx;
}

.mt-1 {
  margin-top: 10rpx;
}

.opacity-80 {
  opacity: 0.8;
}

/* 顶部搜索和筛选 */
.header {
  position: relative;
  z-index: 100;
  background-color: transparent;
  padding: 0;
  display: flex;
  align-items: flex-start;
  box-shadow: none;
  width: 100%;
  margin-top: 10rpx;
}

.search-box {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  height: 72rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-sizing: border-box;
  border: none;
  width: 100%;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
  color: #fff;
  padding: 0;
  border: none;
  background-color: transparent;
  outline: none;
  box-shadow: none !important;
}

.search-input:focus,
.search-input:active,
.search-input:hover {
  border: none;
  outline: none;
  box-shadow: none;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 0 24rpx;
  border-radius: 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  vertical-align: middle;
  position: static;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: -20rpx 30rpx 20rpx 30rpx;
  border-radius: 20rpx;
  position: relative;
  z-index: 99;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
}

.filter-option.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.filter-btns {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.reset-btn, .confirm-btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #3c89ff;
  color: #fff;
}

/* 学校列表 */
.school-list {
  flex: 1;
  padding: 0 30rpx 20rpx 30rpx;
  margin-top: 10rpx;
  position: relative;
  overflow: hidden;
  height: calc(100vh - 300rpx); /* 调整高度计算，确保在各种屏幕尺寸下都能滚动 */
  padding-bottom: 100rpx; /* 增加底部内边距，确保底部内容可见 */
}

.school-list-container {
  position: relative;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 30rpx; /* 滚动容器底部内边距 */
}

.school-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.school-rank {
  width: 60rpx;
  height: 60rpx;
  background-color: #3c89ff;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.school-content {
  flex: 1;
}

.school-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.school-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.school-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.school-tag {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.school-tag.nature {
  background-color: #e6f7ff;
  color: #1890ff;
}

.school-tag.level {
  background-color: #f0f5ff;
  color: #597ef7;
}

.school-tag.rank {
  background-color: #fff7e6;
  color: #fa8c16;
}

.school-address {
  font-size: 26rpx;
  color: #999;
  line-height: 36rpx;
}

/* 空数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
}

/* 非会员列表模糊效果 */
.school-item.blurred-item {
  filter: blur(4px);
  opacity: 0.7;
  pointer-events: none; /* 防止点击模糊项 */
}

/* VIP 遮罩层 (可能与 index.wxss 重复，确保存在) */
.vip-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-radius: inherit;
  z-index: 10;
  backdrop-filter: blur(3px);
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 列表部分遮罩 */
.partial-mask {
  /* 需要精确定位遮罩层的位置，例如只覆盖从第二项开始的区域 */
  /* 可能需要根据实际列表项高度动态计算 top 值，或使用更复杂的 CSS */
  /* 简单示例：假设列表项高度固定 */
  /* top: 150rpx; */ /* 根据实际情况调整 */
  border-radius: 0 0 12rpx 12rpx; /* 底部圆角 */
  top: 180rpx; /* 尝试新的 top 值，需要根据实际效果调整 */
}

.vip-mask-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  text-align: center;
}

.vip-mask-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.vip-btn {
  background: linear-gradient(to right, #4776E6, #8E54E9);
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(71, 118, 230, 0.2);
}

/* VIP 提示模态框 (确保 search-modal 相关样式已存在) */
.vip-modal-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  text-align: center;
}

.vip-modal-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
}

.vip-modal-icon image {
  width: 100%;
  height: 100%;
}

.vip-modal-text {
  text-align: center;
  margin-bottom: 40rpx;
}

.vip-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.vip-modal-desc {
  font-size: 26rpx;
  color: #888;
  display: block;
}

.vip-btn-large {
  background: linear-gradient(to right, #fca54a, #ff7b4a);
  color: white;
  border: none;
  padding: 18rpx 50rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 80%;
  box-shadow: 0 6rpx 12rpx rgba(255, 123, 74, 0.4);
}

/* --- 非会员样式结束 --- */

