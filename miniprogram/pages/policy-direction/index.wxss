/* 页面容器 */
.container {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 定向生解释轮播样式 */
.explanation-swiper {
  margin: 0 24rpx;
  position: relative;
}

.swiper-container {
  height: 340rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.swiper-card {
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.swiper-nav {
  position: absolute;
  top: 60%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  pointer-events: none;
  padding: 0;
  z-index: 20;
}

.swiper-nav-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(200, 200, 200, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
  pointer-events: auto;
  z-index: 10;
  opacity: 0.7;
  transition: opacity 0.2s ease;
}

.swiper-nav-btn:active {
  opacity: 1;
}

.swiper-nav-prev {
  margin-left: 16rpx;
}

.swiper-nav-next {
  margin-right: 16rpx;
}

.nav-arrow {
  color: #4776E6;
  font-size: 22rpx;
  font-weight: normal;
  line-height: 1;
}

.swiper-card::after {
  content: '';
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, rgba(71, 118, 230, 0.08), rgba(142, 84, 233, 0.08));
  border-radius: 50% 0 0 0;
  z-index: 1;
}

.swiper-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  display: inline-block;
  z-index: 2;
}

.swiper-title::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(to right, #4776E6, #8E54E9);
  border-radius: 2rpx;
}

.swiper-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.7;
  position: relative;
  z-index: 2;
}

