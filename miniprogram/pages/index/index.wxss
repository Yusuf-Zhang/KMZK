}

.vip-modal-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
}

.vip-modal-icon image {
  width: 100%;
  height: 100%;
}

.vip-modal-text {
  text-align: center;
  margin-bottom: 40rpx;
}

.vip-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.vip-modal-desc {
  font-size: 26rpx;
  color: #888;
  display: block;
}

.vip-btn-large {
  background: linear-gradient(to right, #fca54a, #ff7b4a);
  color: white;
  border: none;
  padding: 18rpx 50rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 80%;
  box-shadow: 0 6rpx 12rpx rgba(255, 123, 74, 0.4);
}

